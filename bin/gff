#!/usr/bin/env bash

COMMAND="$1"
COMMAND_PARAM="$2"
GFF_FOLDER="$(dirname "$0")/../lib"

for module in $GFF_FOLDER/modules/*; do source $module; done
for helper in $GFF_FOLDER/helpers/*; do source $helper; done

gff_check_environment

export GFF_EDITOR="code"
if [[ -z "$GFF_EDITOR" ]]; then
    GFF_EDITOR=$(basename "$EDITOR")
fi

case $COMMAND in
    "ch")
        gff_chunk
        ;;
    "co")
        gff_checkout
        ;;
    "h_apply")
        gff_apply "${@:2}"
        ;;
    "h_commit")
        gff_commit
        ;;
    "h_get_diff_region")
        gff_get_diff_region "${COMMAND_PARAM}"
        ;;
    "h_get_region")
        gff_get_region "${@:2}"
        ;;
    "h_get_file_status")
        gff_get_file_status "${COMMAND_PARAM}"
        ;;
    "h_get_repo_status")
        gff_get_repo_status
        ;;
    "h_open_in_editor")
        gff_open_in_editor "${@:2}"
        ;;
    "h_switch_branch")
        gff_switch_branch "${COMMAND_PARAM}"
        ;;
    "h_toggle_staged")
        gff_toggle_staged "${COMMAND_PARAM}"
        ;;
    "rg")
        gff_rg "${COMMAND_PARAM}"
        ;;
    "rm")
        gff_remove
        ;;
    "st")
        gff_status
        ;;
    "sw")
        gff_switch "${COMMAND_PARAM}"
        ;;
    *)
        git "${@:1}"
esac
